{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "outDir": ".",
        "rootDir": "ts",
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "ts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src",
        "v1"
    ]
}