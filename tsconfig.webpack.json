{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "rootDir": "ts",
        "sourceMap": false,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ]
    },

    "exclude": [
        "ts/test/**/*.ts",
        "node_modules",
        "src",
        "v1"
    ]
}